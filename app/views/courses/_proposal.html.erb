<div class="columns is-mobile is-vcentered">
  <div class="column is-narrow">
    <p class="is-size-5">
      <span class="icon is-large">
        <% if proposal.votes.pluck(:voter_id).include?(current_teacher.id) %>
          <%= link_to proposal_vote_path(proposal), method: :delete, class: 'has-text-danger' do %>
            <i class="fas fa-heart"></i>
          <% end %>
        <% else %>
          <%= link_to proposal_vote_path(proposal), method: :post, class: 'has-text-danger' do %>
            <i class="far fa-heart"></i>
          <% end %>
        <% end %>
      </span>
    </p>
  </div>

  <div class="column">
    <p class="heading">
      Teacher Name
    </p>

    <p class="title is-4">
      <%= proposal.teacher.name %>
    <p>
  </div>

  <div class="column is-narrow">
    <div class="has-text-centered">
      <p class="heading">
        Votes
      </p>

      <p class="title">
        <%= proposal.votes_count %>
      <p>
    </div>
  </div>
</div>
