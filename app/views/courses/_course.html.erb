<div class="columns is-mobile is-vcentered">
  <div class="column is-narrow">
    <p class="is-size-5">
    <span class="icon has-text-danger is-large">
      <% if course.votes.pluck(:voter_id).include?(current_teacher.id) %>
        <i class="fas fa-heart"></i>
      <% else %>
        <i class="far fa-heart"></i>
      <% end %>
    </span>
    </p>
  </div>

  <div class="column">
    <p class="heading">
      Title
    </p>

    <p class="title is-4">
      <%= link_to course.title, course_path(course), class: 'has-text-dark' %>
    <p>
  </div>

  <div class="column is-narrow">
    <div class="has-text-centered">
      <p class="heading">
        Votes
      </p>

      <p class="title">
        <%= course.votes_count %>
      <p>
    </div>
  </div>

  <div class="column is-narrow">
    <div class="has-text-centered">
      <p class="heading">
        Teachers
      </p>

      <p class="title">
        <%= course.proposals_count %>
      <p>
    </div>
  </div>
</div>
