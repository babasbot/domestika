<div class="container">
  <h3 class="title">Sign In.</h3>

  <p class="subtitle">
    Need an account? Sign up here.
  </p>

  <% flash.each do |type, message| %>
    <div class="notification is-danger is-light is-fixed-top">
      <div class="container">
        <%= message %>
      </div>
    </div>
  <% end %>

  <div class="columns">
    <div class="column is-half">
      <%= render "form", teacher: teacher %>
    </div>
  </div>
</div>
